{
  "name": "mobile-app-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:serverless": "vercel dev --listen 4000",
    "build": "tsup src/server.ts --format esm --target node20 --out-dir dist",
    "start": "node dist/server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.888.0",
    "@aws-sdk/s3-request-presigner": "^3.888.0",
    "@fastify/cors": "^10.1.0",
    "dotenv": "^16.6.1",
    "fastify": "^5.6.0",
    "firebase-admin": "^13.5.0"
  },
  "devDependencies": {
    "tsc": "^2.0.4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vercel": "^39.2.6"
  }
}
